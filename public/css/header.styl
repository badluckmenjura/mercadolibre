
header{
	background: backgroundColor;
	position: sticky;
	padding: 8px 20px;
	box-sizing: border-box;
	top: 0;
	height: 55px;
	z-index: 4
	.logo{
		img{
			width  auto
		}	
	}
	.search{
		display flex
		input{
			width 100%
			border none
			border-radius 4px 0 0 4px
			padding 0 12px
			font-size 18px
		}
		button{
			background containerColor
			padding 10px 15px
			border-radius 0 4px 4px 0
			border none
			img{
				width 16px
			}
		}
	}
}

